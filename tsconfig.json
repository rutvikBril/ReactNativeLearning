{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "es6", // Set the ECMAScript target version
    "module": "commonjs", // Module system to use
    "jsx": "react", // Enables JSX
    "allowSyntheticDefaultImports": true // Allows default imports even if no default export
  },
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}
